
@import "normalize.styl"
@import "fonts.styl"

grey_drk = #333333
grey_lgt = #818181
grey_xlt = #F0F0F0
purple   = #BD2558
pink     = #CC2D6F

/*** General ***/

a
	text-decoration none 

body
	font-size 16px
	font-family 'Varela Round', sans-serif

figure
	margin 0
ul
	margin 0
	padding 0

.relative
	position relative
.btn-menu
	position absolute
	top 50%
	margin-top -10px
	left .5em
	color grey_drk
.container
	padding 1.4em
	font-size 0 
	text-align center
.padding
	padding 1em
.padding-tb
	padding 1.5em 0
.action
	color white
	margin-right 8px
	font-size 1em
	&:last-child
		margin-right 0
	&.gray 
		color grey_drk
		font-size 1.2em
.actions
	position absolute
	bottom 5px
	left 0
	right 0	
	background grey_drk
	opacity 0.7
	width auto
.bdr-btm
	border-bottom 1px solid grey_lgt

/*** Register page ***/

.header-user
	background url(../img/main-background.jpg) repeat center transparent
	width 100%
	height 450px
	display block

.logo-2
	margin 0 auto
	width 14rem
	display block
	& img
		margin 3rem auto 1rem auto
		width 14rem
	& .lg-sfotipy
		color pink
		font-size 1rem
		display none

.slogan-title
	margin 0 auto
	width 14rem
	font-size 1.7rem
	display block
	color white
.login-social
	margin 0 auto
	width 14rem
	display block
	.info
	.lg-so
		padding 1em 0.5em 1em 0em 
		border-radius 0.4em
		display block
		width 95%
		font-size 1rem
		font-weight normal
		color white
		text-align left
	.lg-so:before
		padding 0 0.4em
		margin-right: 0.4em;
		border-right 1px solid white
	.fb
		background #3B5A99
		margin 2em 0 .5em 0
	.tw
		background #62A9DB
	.info
		text-align center
		display none
		.lg-sfotipy
			margin-left .5em
			color pink
.user-btn
	margin 20px auto 10px auto
	display block
	border 1px
	a
		display inline-block
		width 48%
		font-size 0.8rem
		color grey_lgt
		border-right 1px solid grey_lgt
		text-decoration none
		padding 0.5em 0
		&:last-child
			border none
		&:hover
			background grey_xlt
			text-decoration underline
.user-form
	width 100%
	display block
	margin 10px auto 
	font-size 1.2rem
	padding 0 0 1em 0
	.title
		text-align center
		text-align center
		font-size 1.2rem
		color grey_drk
		display block
		padding .9em 0 .5em 0		
	form 
		display block
		width 11em
		margin 0 auto
	.input
		border-radius 5px
		border 1px solid grey_lgt
		font-size .8rem
		height 2.2em
		margin 10px auto
		padding 0 1em 0 2.2em
		display block
		width 80%
	input.input-btn
		background pink
		color white
		padding 0 1em
		border none
		width 99%
	span	
		position absolute		
		color grey_lgt
		left .5em
		font-size .75em
	.user-icon
		top .5em
	.mail-icon
		top 4.25em
		font-size .6em
	.lock-icon
		top 3.2em
	.lockreg-icon
		top 6.05em
	.lockconfr-icon
		top 8.8em

.intro-box 
	display block
	margin-bottom 1rem
	figure
		.image
			img
				width 100%
				padding 0
	.title
		text-align center
		font-size 1rem
		color grey_drk
		display block
		padding .9em 0 .5em 0
	.text
		text-align center
		font-size .9rem
		color grey_lgt
		padding 0.5em 0 1em 0
		width 14em
		display block
		margin 0 auto
.footer
	background grey_drk
	width 100%
	height 50px
	display block
	& figure.image 
		float left
		img
			margin 0.7em 0 0 0.8em
			width 5em
	& .foot-nav
		float right
		color grey_lgt
		margin-right 0.7em
		padding 1em 0
		font-size .9em
		&:hover
			text-decoration underline

/*** Profile page ***/

.profile-head
	margin 0 auto
	width 100%
	display block
	overflow hidden
	.image-profile
		width 10rem
		display block
		margin 0 auto
		img
			width 10rem
	.username
		color grey_lgt
		text-align center
		font-size 1rem
		margin 1rem 0
		display block
.buttons-profile
	width 94%
	padding 1rem 3%
	display block
	text-align right
	.btn-action
		background pink
		color white
		font-size .9rem
		padding .4rem .5rem
		border-radius 5px
.playlist-profile
	padding .5rem
	font-size 1rem
	.playlist-title
		width 93% 
		display block
		color pink
		font-size 1.1em
		line-height 3em
	.playlist-options
		.profile-menu
			display block
			overflow hidden
			border-top 1px solid grey_drk
			.item
				list-style none
				float left						
				a 
					color grey_lgt
					padding .5em
					display block
					border-top 2px solid transparent
					font-size .8em
					&.current
					&:hover
						border-top 2px solid grey_lgt
	.playlist-content
		display block
		margin 0 auto
		padding 1rem 0
		width 11rem
		text-align center
		.action
			font-size 4rem
			width 4rem
			border-radius 150px
			background pink
			color white
			margin 1em auto
			display block
			padding .8rem
		.list-create 
			color pink
			margin 1rem auto
			display block
			font-size 1rem
.profile-song
	width 90%
	padding-top 1rem
	display block	
	margin 0 auto
	text-align left
	border-bottom 1px solid grey_lgt
	overflow hidden
	&:hover
		cursor pointer
	figure
		height 80px
		width 80px
		float left
		img
			float left
			width 60px 
			height 60px 
	.name
		float left
		width 60%
		font-size .85rem
		margin .7em 0 .1em 0
	.author
		width 60%
		float left
		font-size .8rem
/*** Playing page ***/

.name
	color grey_drk
.menu
	display none		
.author
	color grey_lgt
.ctr-block
	margin 0 auto
.ctr-text
	text-align center
.rgt-text
	text-align right
.left
	float left
.right
	float right
.wrap
	width 1000px
.round 
	border-radius 50%
	overflow hidden
.progress
	margin 1.5em 0
	.total
		height 5px
		background grey_lgt
		width 75%	
		border-radius 5px
		margin 0 auto
	.state
		height 5px
		background purple
		width 35%
		border-radius 5px	
	.circle
		background grey_drk
		width 10px
		height 10px
		border-radius 50%
		position absolute
		left 37%
		top -2px
		cursor pointer
	.min 
	.max
		font-size .75em
		position absolute
		top -5px
	.min 
		left 0
	.max
		right 0
.header
	height 3.5em
	.title		
		font-size 1.1em
		text-align center
		marigin 0
		line-height 3.5em
.song
	width 8rem
	display inline-block
	font-size 1rem
	margin-right 1.2em
	margin-left .5em
	text-align left
	&:hover
		cursor pointer
	
.playing
	&.small
		width 20em
		margin 0 auto
		padding-top 0.7em
.search-box
	padding-top 0.2em
	margin-right 1em
.input-search
	border-radius 5px
	border 1px solid grey_lgt
	padding 0 1em 0 2em
	height 2em
.search-icon
	position absolute
	left .5em
	top .6em
	color grey_lgt
.close-icon
	position absolute
	right .5em
	top .25em
	color grey_lgt
	font-size 1.2em


.playlist
	width 25em	
	padding 0 2em
	border-left 1px solid grey_lgt
	display none
	.list 
		list-style none
	.item
		padding 1em .5em 
	.action
		font-size 0.85em
.isotop
	width 122px
.logo
	padding 1.3em 0
	overflow hidden	
	background white
	display none
.avatar
	width 38px
	height 38px
.user
	color grey_lgt
	position relative
	top 9px
	margin-left .5em
	font-size 0.9em
	&:after
		content ""
		border-top 9px solid grey_lgt
		border-left 7px solid transparent
		border-right 7px solid transparent
		display inline-block
		margin-left .4em

@media screen and (min-width: 480px)

	.container 
		&.height-screen
			min-height 772px

	/*** Register page ***/

	.logo-2
		margin 0 
		width 100%
		overflow hidden
		& img
			margin 1.5rem auto 2.5rem 1.5rem
			width 150px !important
			float left
		& .lg-sfotipy
			color pink
			font-size 1rem
			display block
			float right
			margin 2.5rem 2rem 0 0
			font-weight 600			
	.login-social
		.info
			display block
			font-weight 600	
	.user-btn
		display none	
	.user-form
		border-bottom: 1px solid #818181;
	.intro-box
		width 27rem
		padding 0 1rem
		margin 1.3rem auto 2rem auto		
		overflow hidden
		figure
			width 48%
			float left
			&.image-odd
				float right
			img
				width 220px
				height 220px
				border-radius 150px
		.block-text
			width 48%
			height 171px
			float right
			padding-top 3rem
			&.block-odd
				float left
			& .title 
				text-align left	
			& .text 
				margin 0
				text-align left 
				font-size .9rem	
	/*** Playing page ***/

	.profile-song
		width 8rem
		display inline-block
		font-size 1rem
		margin-right 1.2em
		margin-left .5em
		text-align left
		border none
		&:hover
			cursor pointer
		figure
			height 128px
			width 128px
			float left
			img
				float left
				width 128px 
				height 128px 
		.name
		.author
			float none
			font-size .8rem
			float left
			width 100%
			height 15px
			overflow hidden
	/*** Playing page ***/

	.song
		&:nth-child(even)
			margin-right 1em
	.image
		img 
			width 100%
			height auto
	.playing
		&.medium
			width auto
			padding 0 0.6em 


@media screen and (min-width: 1000px)
	body
		background grey_xlt
	.btn-menu
		display none
	.playlist-profile
	.container 
		&.small
			width 66rem
			margin 0 auto
		&.height-screen
			min-height 772px

	.footer
		padding 2em 0
		margin 0 auto
		width 66rem
		figure.image 
			img
				margin-left 2em		
		.foot-nav
			float left
			margin .15em 0 0 2em
		
	/*** Register page ***/

	.info
		text-align center
		display none
	.intro-box
		width 40rem
		& figure
			text-align left

	/*** Playing page ***/

	.playing
		&.large 
			width 62.5em
			margin 0 auto
			overflow hidden
			padding-top 1.3em
	.menu
		display block
		background grey_xlt
		overflow hidden
		border-top 1px solid grey_drk
		.item
			list-style none
			float left						
			a 
				color grey_drk
				text-transform uppercase
				padding 1em
				display block
				border-top 5px solid transparent
				font-size .9em
				&:hover
					border-top 5px solid grey_lgt

	.music
		width 32.5em
		float left
		.description
			display none
	.music-list	
		width 100%
		height 32em
		overflow auto
		padding-right: 1em;
	.header
		height auto
		border none
		.title
			display none
	.logo
	display block
	
	.playlist
		display block
		.item:hover
				background #DDD
				cursor pointer